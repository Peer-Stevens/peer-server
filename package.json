{
	"name": "peer-server",
	"version": "1.0.0",
	"description": "server for Peer",
	"main": "src/server.ts",
	"repository": "https://github.com/Peer-Stevens/peer-server.git",
	"author": "Andrew Jones <ajones4@stevens.edu>",
	"license": "UNLICENSED",
	"private": true,
	"scripts": {
		"build": "tsc",
		"watch": "nodemon --exec ts-node -- ./src/server.ts",
		"dev": "ts-node ./src/server.ts",
		"start": "node ./dist/src/server.js",
		"prod": "yarn run build && yarn run start",
		"prepare": "husky install",
		"lint-staged": "pretty-quick --staged && lint-staged",
		"lint": "eslint --config .eslintrc.js --fix . && prettier --config prettier.config.js --write \"**/*.{js,jsx,json,ts,tsx,md,mdx,css,html,yml,yaml,scss}\"",
		"seed": "ts-node ./src/seed/seed.ts",
		"test": "jest --watchAll"
	},
	"dependencies": {
		"@googlemaps/google-maps-services-js": "3.3.10",
		"axios": "0.26.0",
		"cors": "2.8.5",
		"dotenv": "16.0.0",
		"express": "4.17.3",
		"express-rate-limit": "6.3.0",
		"mongodb": "4.4.0",
		"newrelic": "8.7.1",
		"passport": "0.5.2",
		"passport-local": "1.0.0",
		"typescript": "4.5.5"
	},
	"devDependencies": {
		"@types/cors": "2.8.12",
		"@types/express": "4.17.13",
		"@types/express-rate-limit": "5.1.3",
		"@types/jest": "27.4.0",
		"@types/newrelic": "7.0.3",
		"@types/node": "16.11.25",
		"@types/passport": "1.0.7",
		"@types/passport-local": "1.0.34",
		"@types/supertest": "2.0.11",
		"@typescript-eslint/eslint-plugin": "5.12.1",
		"@typescript-eslint/parser": "5.12.1",
		"eslint": "8.9.0",
		"eslint-config-prettier": "8.4.0",
		"eslint-plugin-import": "2.25.4",
		"eslint-plugin-prettier": "4.0.0",
		"husky": "7.0.4",
		"jest": "27.5.1",
		"lint-staged": "12.3.4",
		"nodemon": "2.0.15",
		"peer-types": "^1.0.4",
		"prettier": "2.5.1",
		"pretty-quick": "3.1.3",
		"ts-jest": "27.1.3",
		"ts-node": "10.5.0"
	},
	"lint-staged": {
		"*.{ts,js}": "eslint --cache --fix"
	}
}
